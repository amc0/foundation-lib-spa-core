{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "removeComments": false,
    "sourceMap": true
  },
  "exclude": ["node_modules", "tests", "dist"]
}
